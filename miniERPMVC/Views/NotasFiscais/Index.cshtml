@model IEnumerable<miniERPMVC.Models.NotasFiscai>

@{
    ViewData["Title"] = "Index";
}

<h1>Notas Fiscais</h1>

<p>
    <a asp-action="Create">Criar nota</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataEmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProdutoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProdutoNavigation.IdProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNota">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdNota">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNota">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
